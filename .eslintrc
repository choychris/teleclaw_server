{
  "env": {
      "node": true, 
      "browser": true, 
      "es6": true,
      "jest": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "loopback"],
  "plugins": ["import"],
  "rules": {
      "no-use-before-define": 0,
      "object-curly-spacing": [2, "always"],
      "no-param-reassign": ["error", { "props": false }],
      "max-len": ["error", 120],
      "camelcase": ["error", { "properties": "never" }]
    }
}
